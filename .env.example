# Environment Configuration Template
# Copy this file to .env and update with your actual credentials

# ============================================================================
# LLM Configuration
# ============================================================================
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# For Azure OpenAI (alternative to OpenAI)
# AZURE_OPENAI_API_KEY=...
# AZURE_OPENAI_ENDPOINT=https://....openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=gpt-4
# AZURE_OPENAI_API_VERSION=2024-02-01

# ============================================================================
# Database Configuration: Snowflake
# ============================================================================
SNOWFLAKE_ACCOUNT=xy12345  # Account identifier (not full URL)
SNOWFLAKE_USER=user@company.com
SNOWFLAKE_PASSWORD=password_here
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=DEV_DB
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=SYSADMIN

# ============================================================================
# Database Configuration: AWS Redshift (Alternative)
# ============================================================================
# REDSHIFT_HOST=redshift-cluster.xxxx.us-east-1.redshift.amazonaws.com
# REDSHIFT_PORT=5439
# REDSHIFT_USER=admin
# REDSHIFT_PASSWORD=password
# REDSHIFT_DATABASE=dev_db

# ============================================================================
# Database Configuration: Google BigQuery (Alternative)
# ============================================================================
# GCP_PROJECT_ID=my-project
# GCP_CREDENTIALS_PATH=/path/to/credentials.json

# ============================================================================
# Vector Store Configuration: Pinecone
# ============================================================================
PINECONE_API_KEY=...
PINECONE_ENVIRONMENT=us-west-2-aws
PINECONE_INDEX=ent-qa
PINECONE_NAMESPACE=default
PINECONE_TOP_K=5

# ============================================================================
# State Persistence: Redis (Optional)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # Leave empty if no auth required

# ============================================================================
# Application Settings
# ============================================================================
LOG_LEVEL=INFO
MAX_RETRIES=3
REQUEST_TIMEOUT_SECONDS=30
